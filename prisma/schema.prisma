// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Reminder {
  id Int @id @default(autoincrement())

  userId     String
  content    String
  time       DateTime
  // RRULE for recurring reminders
  repeatRule String?
}
